{
  "name": "string-autocomplete-from-json",
  "displayName": "String Autocomplete from JSON",
  "description": "Code completion in strings from a JSON source",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.73.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "configuration": {
      "title": "String Autocomplete from JSON",
      "properties": {
        "string-autocomplete.config": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "sourcePath": {
                "type": "string",
                "description": "Path of the source JSON file. It can be either absolute or relative to workspace root directory."
              },
              "destinationPattern": {
                "type": "string",
                "description": "Glob pattern of files to provide the code completion in."
              }
            }
          },
          "default": "",
          "description": "Configuration of source files and destination files for code completion."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "dependencies": {
    "glob": "10.2.2",
    "json-source-map": "^0.6.1",
    "minimatch": "^9.0.0"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.0",
    "@types/node": "16.x",
    "@types/vscode": "^1.73.0",
    "@typescript-eslint/eslint-plugin": "^5.42.0",
    "@typescript-eslint/parser": "^5.42.0",
    "@vscode/test-electron": "^2.2.0",
    "eslint": "^8.26.0",
    "mocha": "^10.1.0",
    "typescript": "^4.8.4"
  }
}
